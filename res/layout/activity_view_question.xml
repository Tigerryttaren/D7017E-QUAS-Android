<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".MainActivity" >

<LinearLayout 
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="#9FD7FC"
    android:padding="10dp"
    android:layout_margin="10dp" >
    
    <TextView 
        android:id="@+id/view_question_title_question"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp" />
    
    <TextView 
        android:id="@+id/view_question_body_question"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:layout_marginBottom="15dip" />
    
	    <LinearLayout 
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content"
		    android:orientation="horizontal" >
	    
			<TextView 
		        android:id="@+id/view_question_author_title"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:text="@string/test_author_title" 
		        android:layout_marginRight="1dip"
		        android:textSize="12sp" />
		    
		    <TextView 
		        android:id="@+id/view_question_author"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:textSize="12sp" />
    	</LinearLayout>
    	<LinearLayout 
			android:layout_width="match_parent"
		    android:layout_height="wrap_content"
		    android:orientation="horizontal" >
	    
		   <TextView 
		        android:id="@+id/view_question_timestamp_title"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:text="@string/test_timestamp_title" 
		        android:layout_marginRight="1dip"
		        android:textSize="12sp" />
		    
		    <TextView 
		        android:id="@+id/view_question_timestamp"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:textSize="12sp" />
	    </LinearLayout>    
    <LinearLayout 
		android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:orientation="horizontal" >
    
		<TextView 
	        android:id="@+id/view_question_tags_title"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="@string/test_tags_title"
	        android:layout_marginRight="1dip" 
	        android:textSize="12sp" />
	    
	    <TextView 
	        android:id="@+id/view_question_tags"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:textSize="12sp" />
    </LinearLayout>
    
	<LinearLayout 
	    
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:orientation="horizontal"
	    android:background="#ffffff"
	    android:padding="10dp"
	    android:layout_margin="10dp" >
	    
		<TextView 
			android:id="@+id/view_question_number_of_replies"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:text="[ # of replies]"
		    android:layout_marginRight="1dip" 
		    android:textSize="20sp" />
		
		<TextView 
		    android:id="@+id/view_question_number_of_replies_text"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:text=" replies"
		    android:layout_marginRight="1dip" 
		    android:textSize="20sp"/>
		
		<Button 
			android:id="@+id/view_question_to_replies_button"
			android:layout_height="wrap_content"
    		android:layout_width="wrap_content"
     		android:text="Read replies"
     		 android:textSize="20sp" />
	    
    </LinearLayout>
</LinearLayout>


</ScrollView>
